<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>


    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favorite.view.FavoriteFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:elevation="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/no_favorite_background"
        app:layout_constraintEnd_toEndOf="@+id/favorite_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/favorite_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/favorite_recycler_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_fav_button"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background"
        android:clickable="true"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/add_fav_button"
        app:layout_constraintEnd_toEndOf="@+id/add_fav_button"
        app:layout_constraintStart_toStartOf="@+id/add_fav_button"
        app:layout_constraintTop_toTopOf="@+id/add_fav_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/add_fav_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_favorite_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/no_favorite_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_favorite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="48dp"
            app:tint="@color/colorTextSecondary" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_places"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            app:tint="@color/colorTextSecondary"
            app:layout_constraintEnd_toEndOf="@+id/no_favorite_image"
            app:layout_constraintStart_toStartOf="@+id/no_favorite_image"
            app:layout_constraintTop_toBottomOf="@+id/no_favorite_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>