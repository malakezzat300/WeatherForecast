<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="tempItem"
            type="com.malakezzat.weatherforecast.model.ListF" />

        <variable
            name="time"
            type="String" />

        <variable
            name="temp"
            type="String" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        android:layout_margin="6dp"
        android:layout_width="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{time}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/hour_icon"
                icon="@{tempItem.weather.get(0).icon}"
                myError="@{@drawable/ic_launcher_foreground}"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hour_text" />

            <TextView
                android:id="@+id/temp_text"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="@{tempItem.main.tempV2}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hour_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>